/* pages/goods/goods.wxss */
page{
  background: #f0f0f0;
}
.good-banner{
  background: #fff;
  width: 100vw;
}
.good-banner>swiper{
  height: 450rpx;
}
.good-banner image{
  height: 450rpx;
  width: 100vw;
}
.good-price{
  display: flex;
  flex-direction: column;
  color: #333;
  border-bottom: 1rpx solid #eaeaea;
}
.good-price>label:first-child{
  margin-top: 30rpx;
  margin-left: 30rpx;
  font-size: 28rpx;
}
.good-price>label:nth-child(2)
{
  margin-top: 15rpx;
  margin-left: 30rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #e4002f;
  margin-bottom: 30rpx;
}
.good-info{
  background: #fff;
  height: 95rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.shop-tit{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #333;
}
.shop-tit>image{
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  margin-right: 50rpx;
}
.shop-in{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
  margin-right: 20rpx;
}
.goods-cont{
  margin-top: 30rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
}
.cont-head{
  height: 69rpx;
  line-height: 69rpx;
  display: flex;
  flex-direction: row;
}
.cont-head>label{
  width: 100vw;
  margin-left: 20rpx;
  color: #333;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eaeaea;
}
.cont-detail{
  display: flex;
  flex-direction: column;
}
.cont-detail>text:first-child{
  margin:30rpx 40rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 36rpx;
}
.cont-detail>image{
  margin-bottom: 20rpx;
  width: 100vw;
}

/* 购物车 start */
.buypanel{
  background: #fff;
  position: fixed;
  bottom: 0;
  width: 100vw;
  height: 105rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.buycar{
  width: 230rpx;
  height: 105rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.caricon{
  position: relative;
  width: 60rpx;
  height: 60rpx;
}
.caricon>.iconfont{
  font-size: 60rpx;
  color: #333;
}
.cartip{
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #fff;
  background: rgb(238,10,36);
  text-align: center;
  font-weight: bold;
  font-size: 24rpx;
}
.buybtns{
  display: flex;
  flex-direction: row;
  width: 508rpx;
  height: 76rpx;
  font-size: 30rpx;
  color: #fff;
}
.carbtn{
  width: 254rpx;
  height: 76rpx;
  text-align: center;
  line-height: 76rpx;
  border-top-left-radius: 38rpx;
  border-bottom-left-radius: 38rpx;
  background: linear-gradient(90deg,#ffcb09,#ff8b16);
  color:#fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.carbtn:active{
  background:#ff8b16;
}
.buybtn{
  width: 254rpx;
  height: 76rpx;
  text-align: center;
  line-height: 76rpx;
  border-top-right-radius: 38rpx;
  border-bottom-right-radius: 38rpx;
  background: linear-gradient(90deg,#ff5e35,#ef0a23);
  color:#fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.buybtn:active{
  background:#ef0a23;
}
/* 购物车 end */