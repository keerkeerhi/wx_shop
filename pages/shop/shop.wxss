.putCar{
  position: absolute;
  right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  border-radius: 6rpx;
  border: 1rpx solid #c8c8c8;
}
.putCar>.iconfont{
  color: #e50d3a;
  font-size: 30rpx;
}

