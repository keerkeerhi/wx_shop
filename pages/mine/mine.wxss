/* pages/mine/mine.wxss */
page{
  background: #f1f1f1;
}
.mybanner{
  height: 270rpx;
  background: #FFE300;
  position: relative;
}
.banner-cont{
  z-index: 3;
  position: absolute;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.back-img{
  z-index: 2;
  position: absolute;
  top: -50rpx;
  left: 40vw;
  width: 270rpx;
  height: 270rpx;
  background-position: center center;
  background-size: 100%;
  background-repeat: no-repeat;
  opacity: .3;
  border-radius: 135rpx;
}
.myname{
  margin-bottom: 64rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.myname>label{
  margin-left: 16rpx;
  color: #5000CC;
}
.head-img{
  width: 105rpx;
  height: 105rpx;
  border-radius: 50%;
  margin-left: 25rpx;
}
.mynav{
  height: 200rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.navitem{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navitem.active{
  font-weight: bolder;
  color: #5000CC;
}
.item-lab{
  font-size: 24rpx;
  font-weight: bold;
  margin-top: 18rpx;
}