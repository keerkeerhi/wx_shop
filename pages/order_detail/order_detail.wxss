/* pages/order_detail/order_detail.wxss */
.orderPage{
  background: #f1f5f6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.orderInfo{
  background: #fff;
}
.addressCont{
  width: 720rpx;
  margin-left: 30rpx;
}
.orderSta{
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #efefef;
  justify-content: space-between;
}
.orderSta>label:first-child{
  font-size: 32rpx;
  font-weight: bold;
  color: #ff443f;
}
.linkCont{
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.linkCont>label:first-child{
  font-size: 28rpx;
  color: #333;
  margin-right: 12rpx;
} 
.linkBtn{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 48rpx;
  border-radius: 24rpx;
  border: 2rpx solid #6f6f6f;
  font-size: 24rpx;
  margin-right: 30rpx;
  color: #333;
  width: 240rpx;
}
.linkBtn>vant-icon:first-child{
  margin-left: 30rpx;
}
.linkBtn>label:last-child{
  margin-left: 6rpx;
  font-weight: bold;
}
.address-info{
  height: 138rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  color: #333;
}
.manInfo{
  font-size: 30rpx;
  font-weight: bolder;
}
.manInfo>label:first-child{
  margin-right: 40rpx;
  margin-left: 16rpx;
}
.address-words{
  margin-left: 16rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 630rpx;
}

.send-price{
  margin-bottom: 128rpx;
  width: 720rpx;
  margin-left: 15rpx;
  margin-top: 20rpx;
  background: #fff;
  border-radius: 6rpx;
}
.priceInfo{
  display: flex;
  flex-direction: column;
  color: #333;
  font-size: 24rpx;
}
.priceInfo>.send-item:first-child{
  margin-top: 15rpx;
}
.priceInfo>.send-item:last-child{
  margin-bottom: 15rpx;
}
.send-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  height: 50rpx;
}
.send-item>label:first-child{
  margin-left: 30rpx;
  color: #868686;
}
.send-item>label:last-child{
  margin-right: 30rpx;
  font-weight: bolder;
  color: #333;
}

.shopItem{
  margin-top: 20rpx;
  background: #fff;
  display: flex;
}
.shopCont{
  background: #fff;
  margin-left: 33rpx;
  width: 717rpx;
  display: flex;
  flex-direction: column;
}
.shopHead{
  height: 92rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #eae8eb;
  font-size: 26rpx;
}
.toShop{
  height: 92rpx;
  color: #333;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.shopTit{
  margin-left: 13rpx;
  margin-right: 6rpx;
}
.shopHead>label{
  margin-right: 30rpx;
  color: #ec3c3c;
}
.goodInfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #eae8eb;
}
.goodInfo>image{
  margin: 25rpx 0;
  width: 126rpx;
  height: 126rpx;
}
.goodDet{
  font-size: 24rpx;
  line-height: 36rpx;
  flex: 1;
  margin-left: 10rpx;
  margin-right: 35rpx;
  display: flex;
  flex-direction: column;
}
.goodDet>label:first-child{
  color: #333;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodDet>label:last-child{
  color: #666;
  margin-top: 15rpx;
}